# Imagen base para runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
# Configurar el puerto de la aplicaci칩n para que coincida con docker-compose
ENV ASPNETCORE_URLS=http://+:5289
# Exponer el puerto que usar치 la aplicaci칩n
EXPOSE 5289

# Imagen para build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
# Copiar archivos de proyecto primero para mejor cache de Docker
COPY *.csproj ./
RUN dotnet restore
# Copiar el resto del c칩digo
COPY . .
RUN dotnet publish -c Release -o /app/publish

# Imagen final
FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "apiFestivos.Presentacion.dll"]
